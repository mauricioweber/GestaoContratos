@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

    <div class="text-center">
        @if (SignInManager.IsSignedIn(User))
        {
            <h1 class="display-4">Olá!</h1>
            <p>Clique <a asp-area="Manager" asp-page="/Contracts/Index">aqui</a> para acessar a área de contratos.</p>
        }
        else
        {
            <h1 class="display-4">Olá!</h1>
            <p>Realize o <a asp-area="Identity" asp-page="/Account/Login">login</a> para ter acesso aos contratos.</p>
        }

    </div>
